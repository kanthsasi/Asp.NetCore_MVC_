
@model CarDetailsVM

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-uppercase text-center">Edit Car Details</h2>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-8 border-1 border p-4">
            <form method="post" enctype="multipart/form-data">
                <input asp-for="@Model.CarDetails.Id" hidden/>
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.CarDetails.Name" class="form-label"></label>
                            <input asp-for="@Model.CarDetails.Name" class="form-control" />
                            <span asp-validation-for="@Model.CarDetails.Name"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.CarDetails.BrandId" class="form-label"></label>
                            <select asp-for="@Model.CarDetails.BrandId" asp-items="@Model.BrandList" class="form-select">
                                <option disabled selected>--Select Brand--</option>
                            </select>
                            <span asp-validation-for="@Model.CarDetails.BrandId"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.CarDetails.VehicalTypeId" class="form-label"></label>
                            <select asp-for="@Model.CarDetails.VehicalTypeId" asp-items="@Model.VehicleTypeList" class="form-select">
                                <option disabled selected>--Select Vehicle Type--</option>
                            </select>
                            <span asp-validation-for="@Model.CarDetails.VehicalTypeId"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.CarDetails.EngineAndFuelType" class="form-label"></label>
                            <select asp-for="@Model.CarDetails.EngineAndFuelType" asp-items="@Model.EngineAndFuelTypeList" class="form-select">
                            </select>
                            <span asp-validation-for="@Model.CarDetails.EngineAndFuelType"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.CarDetails.Transmission" class="form-label"></label>
                            <select asp-for="@Model.CarDetails.Transmission" asp-items="@Model.TransmissionList" class="form-select">
                            </select>
                            <span asp-validation-for="@Model.CarDetails.Transmission"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.CarDetails.Engine" class="form-label"></label>
                            <input asp-for="@Model.CarDetails.Engine" class="form-control" />
                            <span asp-validation-for="@Model.CarDetails.Engine"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.CarDetails.TopSpeed" class="form-label"></label>
                            <input asp-for="@Model.CarDetails.TopSpeed" class="form-control" />
                            <span asp-validation-for="@Model.CarDetails.TopSpeed"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.CarDetails.Mileage" class="form-label"></label>
                            <input asp-for="@Model.CarDetails.Mileage" class="form-control" />
                            <span asp-validation-for="@Model.CarDetails.Mileage"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.CarDetails.Range" class="form-label"></label>
                            <input asp-for="@Model.CarDetails.Range" class="form-control" />
                            <span asp-validation-for="@Model.CarDetails.Range"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.CarDetails.SeatingCapacity" class="form-label"></label>
                            <input asp-for="@Model.CarDetails.SeatingCapacity" class="form-control" />
                            <span asp-validation-for="@Model.CarDetails.SeatingCapacity"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.CarDetails.PriceFrom" class="form-label"></label>
                            <input asp-for="@Model.CarDetails.PriceFrom" class="form-control" />
                            <span asp-validation-for="@Model.CarDetails.PriceFrom"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.CarDetails.PriceTo" class="form-label"></label>
                            <input asp-for="@Model.CarDetails.PriceTo" class="form-control" />
                            <span asp-validation-for="@Model.CarDetails.PriceTo"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.CarDetails.Ratings" class="form-label"></label>
                            <input asp-for="@Model.CarDetails.Ratings" class="form-control" />
                            <span asp-validation-for="@Model.CarDetails.Ratings"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.CarDetails.VehicalImage" class="form-label"></label>
                            <input type="file" name="files" id="uploadBox" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-12 text-end">
                        <div class="mb-3">
                            <a asp-area="Admin" asp-controller="CarDetails" asp-action="Index" class="btn btn-danger">Back</a>
                            <button type="submit" class="btn btn-warning">Update</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-4">
            @if(Model.CarDetails.VehicalImage != null)
            {
                <img src="@Model.CarDetails.VehicalImage" width="100%"/>
            }
        </div>
    </div>
</div>
